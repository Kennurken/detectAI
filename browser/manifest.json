{
  "manifest_version": 3,
  "name": "Digital Trace AI",
  "version": "1.2",
  "description": "AI-powered cyber threat detection",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://detect-ai-silk.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}